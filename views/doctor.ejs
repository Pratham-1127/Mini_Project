<!-- doctor.ejs -->
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="/styles/doctor.css">
    <title>Doctor Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <%- include('partials/navbar.ejs') %>
    <div class="container">
        <% if (doctor) { %>
            <img src="<%= doctor.imageurl %>" alt="<%= doctor.firstname %> <%= doctor.lastname %>" class="doctor-image">
            <h1><%= doctor.firstname %> <%= doctor.lastname %></h1>
            <p><strong>Speciality:</strong> <%= doctor.speciality %></p>
            <p><strong>Qualification:</strong> <%= doctor.qualification %></p>
            <p><strong>Email:</strong> <%= doctor.email %></p>
            <p><strong>Age:</strong> <%= doctor.age %></p>
            <p><strong>Gender:</strong> <%= doctor.gender %></p>
            <p><strong>Available Time Slots:</strong> <%= doctor.time_slots.join(', ') %></p>
        <% } else { %>
            <p>No details available for this doctor.</p>
        <% } %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
